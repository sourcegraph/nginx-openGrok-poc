location ~* /source/xref/([^/]+)/(.+)$ {
  set $repo $1;
  set $file_path $2;
  if ($query_string ~* "r=(.+)") {
    set $revision $1;
    rewrite ^ ${SOURCEGRAPH_URI}${SOURCEGRAPH_CODEHOST}/$repo@$revision/-/blob/$file_path? redirect;
  }
  rewrite ^ ${SOURCEGRAPH_URI}${SOURCEGRAPH_CODEHOST}/$repo/-/blob/$file_path? redirect; 
}

