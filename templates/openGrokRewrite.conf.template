location  /source/search {
    if ($arg_full) {
       set $sg_query "$arg_full";
    }
    if ($arg_type) {
       set $sg_query "$sg_query lang:$arg_type";
    }
    if ($arg_path) {
       set $sg_query "$sg_query file:$arg_path";
    }
    rewrite ^ ${SOURCEGRAPH_URI}/search?q=$sg_query redirect;

